@model IEnumerable<Employee>
@{
    ViewBag.Title="Employee List";
}
    
<div class="list_employee">
    @foreach (var employee in Model)
    {
        var image=employee.PhotoPath ?? "noimage.png";
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <div style="text-align: center;"><img class="card-img-top" src="~/contents/images/@image"></img></div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.EncryptedId" class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }
</div>    